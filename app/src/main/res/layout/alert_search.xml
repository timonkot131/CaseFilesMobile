<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="19dp"
            android:textSize="19dp"
            android:text="@string/Region" />

        <Spinner
            android:id="@+id/regSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:paddingLeft="19dp"
            android:text="@string/Court" />

        <Spinner
            android:id="@+id/courtSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/numberSearch"
            android:textAlignment="textStart"
            android:paddingLeft="19dp"
            android:textSize="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/CaseNumber" />

        <EditText
            android:id="@+id/sideSearch"
            android:textAlignment="textStart"
            android:paddingLeft="19dp"
            android:textSize="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Side" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:paddingLeft="19dp"
            android:text="@string/From" />

        <DatePicker
            android:id="@+id/fromSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:paddingLeft="19dp"
            android:text="@string/To" />

        <DatePicker
            android:id="@+id/toSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarTextColor="#FFFFFF"
            android:calendarViewShown="false" />
    </LinearLayout>


</ScrollView>